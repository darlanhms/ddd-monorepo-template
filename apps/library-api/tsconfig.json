{
    "extends": "tsconfig/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "baseUrl": "./src",
        "paths": {
            "@infra/*": ["./infra/*"],
            "@library/*": ["./modules/library/*"]
        }
    },
    "include": [
        "src/*.ts",
        "src/**/*.ts",
        "src/**/*.js"
    ]
}
